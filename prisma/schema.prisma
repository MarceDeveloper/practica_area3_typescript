// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Usuario {
  id            String   @id @default(cuid())
  nombre        String
  email         String   @unique
  contrasenaHash String
  rol           String
  reservas      Reserva[]
}

model Espacio {
  id         String     @id @default(cuid())
  nombre     String
  capacidad  Int
  tipo       String
  descripcion String
  reservas   Reserva[]
}

model Reserva {
  id         String   @id @default(cuid())
  usuarioId  String
  espacioId  String
  fechaInicio DateTime
  fechaFin   DateTime
  estado     String
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  espacio    Espacio  @relation(fields: [espacioId], references: [id])
}